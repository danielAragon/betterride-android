<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewcontrollers.fragments.ProjectsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/organiNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizacion Name"
            android:layout_margin="@dimen/default_margin"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/titleProjectsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:layout_margin="@dimen/default_margin"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/organiNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/projectsRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleProjectsTextView"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/createeventFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_add_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>