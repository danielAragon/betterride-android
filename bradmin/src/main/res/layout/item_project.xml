<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/projectCardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F2F2F2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="center">
            <TextView
                android:id="@+id/titleProjectsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Lince"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginEnd="90dp"/>

            <ImageButton
                android:id="@+id/deleteProjectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="#F2F2F2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center">

            <ImageButton
                android:id="@+id/editProjectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_35dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="115dp"
                android:background="#F2F2F2" />

            <TextView
                android:id="@+id/dayProjectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 September"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>