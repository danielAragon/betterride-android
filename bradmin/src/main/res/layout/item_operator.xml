<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemOperatorLayout">
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewOperator"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F2F2F2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="center">
            <TextView
                android:id="@+id/nameOperatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginEnd="90dp"/>

            <ImageButton
                android:id="@+id/deleteOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="#F2F2F2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center">

            <ImageButton
                android:id="@+id/editOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_35dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="115dp"
                android:background="#F2F2F2" />
            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                android:text="User_Name"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>